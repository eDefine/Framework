{% extends 'base.html.twig' %}

{% block body %}
    <form action="{{ path('security', 'login') }}" method="post" class="form-horizontal">
        <div class="form-group">
            <label for="" class="col-sm-2 control-label">Email</label>
            <div class="col-sm-10">
                {{ form_input(loginForm.get('email'), {'class': 'form-control'}) }}
            </div>
        </div>
        <div class="form-group">
            <label for="" class="col-sm-2 control-label">Password</label>
            <div class="col-sm-10">
                {{ form_input(loginForm.get('plainPassword'), {'class': 'form-control'}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        {{ form_input(loginForm.get('rememberMe')) }} Remember me
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Login</button>
            </div>
        </div>
    </form>
{% endblock %}