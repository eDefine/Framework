{% extends 'base.html.twig' %}

{% block body %}
    <form action="{{ path('category', 'edit', {'id': category.id}) }}" method="post" class="form-horizontal">
        <div class="form-group">
            <label for="" class="col-sm-2 control-label">Name</label>
            <div class="col-sm-10">
                {{ form_input(categoryForm.get('name'), {'class': 'form-control'}) }}
            </div>
        </div>
        <div class="form-group">
            <label for="" class="col-sm-2 control-label">Name</label>
            <div class="col-sm-10">
                {{ form_input(categoryForm.get('parentId'), {'class': 'form-control'}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
    </form>
{% endblock %}