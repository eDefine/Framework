{% extends 'base.html.twig' %}

{% block body %}
    <form action="{{ path('message', 'write', {'id': recipient.id}) }}" method="post" class="form-horizontal">
        <div class="form-group">
            <label for="" class="col-sm-2 control-label">Title</label>
            <div class="col-sm-10">
                {{ form_input(messageForm.get('title'), {'class': 'form-control'}) }}
            </div>
        </div>
        <div class="form-group">
            <label for="" class="col-sm-2 control-label">Content</label>
            <div class="col-sm-10">
                {{ form_input(messageForm.get('content'), {'class': 'form-control'}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </div>
    </form>
{% endblock %}