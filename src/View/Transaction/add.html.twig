{% extends 'base.html.twig' %}

{% block body %}
    <form action="{{ path('transaction', 'add') }}" method="post" class="form-horizontal">
        <div class="form-group">
            <label for="" class="col-sm-2 control-label">Name</label>
            <div class="col-sm-10">
                {{ form_input(transactionForm.get('name'), {'class': 'form-control'}) }}
            </div>
        </div>
        <div class="form-group">
            <label for="" class="col-sm-2 control-label">Description</label>
            <div class="col-sm-10">
                {{ form_input(transactionForm.get('description'), {'class': 'form-control'}) }}
            </div>
        </div>
        <div class="form-group">
            <label for="" class="col-sm-2 control-label">Transaction Date</label>
            <div class="col-sm-10">
                {{ form_input(transactionForm.get('transactionDate'), {'class': 'form-control'}) }}
            </div>
        </div>
        <div class="form-group">
            <label for="" class="col-sm-2 control-label">Value</label>
            <div class="col-sm-10">
                {{ form_input(transactionForm.get('value'), {'class': 'form-control'}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </div>
    </form>
{% endblock %}