{% extends 'base.html.twig' %}

{% block body %}
    <form action="{{ path('weight', 'add') }}" method="post" class="form-horizontal">
        <div class="form-group">
            <label for="" class="col-sm-2 control-label">Date</label>
            <div class="col-sm-10">
                {{ form_input(weightForm.get('date'), {'class': 'form-control'}) }}
            </div>
        </div>
        <div class="form-group">
            <label for="" class="col-sm-2 control-label">Value</label>
            <div class="col-sm-10">
                {{ form_input(weightForm.get('value'), {'class': 'form-control'}) }}
            </div>
        </div>
        <div class="form-group">
            <label for="" class="col-sm-2 control-label">Info</label>
            <div class="col-sm-10">
                {{ form_input(weightForm.get('info'), {'class': 'form-control'}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </div>
    </form>
{% endblock %}